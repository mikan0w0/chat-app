  <div class="top-main">
    <div class="main-room-name">
      room-name1
    </div>
    <div class="exit-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
  
  <div class="chat">
    <div class="a-chat">
      <div class="name_date">
        <div class="name">Tom</div>
        <div class="date">2020/08/24</div>
      </div>
      <div class="message">
        おはよう
      </div>
    </div>

    <div class="a-chat">
      <div class="name_date">
        <div class="name">Jim</div>
        <div class="date">2020/08/24</div>
      </div>
      <div class="message">
        やあ
      </div>
    </div>
  </div>
  
  <div class="bottom-main">
    <%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
      <form class="form">
        <div class="form2">  
          <%= f.text_field :content, placeholder: 'type a message', class: 'b-message' %>
          <label class="image">
            <span class="image-file">画像</span>
            <%=f.file_field :image, class: 'hidden' %>
          </label>
        </div> 
        <%= f.submit '送信', class: 'send-btn' %>
      </form>
    <% end %>
  </div>
